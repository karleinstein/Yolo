<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog_btncancel"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameUserC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="nameUser"
            android:textColor="#919090"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#AAAAAA" />

        <RelativeLayout
            android:id="@+id/layoutConfirmLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/imgLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logout_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/imgLogout"
                android:text="Log out"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnCancelL"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_btn_cancel_confirm"
            android:text="CANCEL"
            android:textColor="#919090"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>