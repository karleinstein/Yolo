<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvAvatarCmt"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/user_default" />

    <TextView
        android:id="@+id/tvNameUserCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imvAvatarCmt"
        android:text="fdsafdsa"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvContentCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameUserCmt"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imvAvatarCmt"
        android:text="fdsafds" />

    <TextView
        android:id="@+id/tvTimeCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContentCmt"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imvAvatarCmt"
        android:text="fdsafds" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tvTimeCmt"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imvAvatarCmt"
        android:background="#ececf1" />

</RelativeLayout>