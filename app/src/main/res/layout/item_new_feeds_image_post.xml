<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvOptions2"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/vertical_3_dots"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvAvatar2"
        android:transitionName="avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user_default_big" />

    <TextView
        android:id="@+id/tvNameUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imvAvatar2"
        android:text="fdsafd"
        android:textColor="#000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameUser2"
        android:layout_marginStart="8dp"
        android:textColor="#0079d3"
        android:layout_toEndOf="@+id/imvAvatar2"
        android:text="fdsafds" />

    <LinearLayout
        android:id="@+id/layoutText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvAvatar2"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#000"
            android:textStyle="bold" />


        <ImageView
            android:transitionName="imagePost"
            android:id="@+id/imvImagePost2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/cvReact2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/layoutText2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutLove2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvLove2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/tvLove2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutComment2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="42dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvComment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/tvComment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>